{
  "compilerOptions": {
    "sourceMap": false,
    "removeComments": false,

    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "alwaysStrict": true,

    "declaration": true,
    "declarationDir": "dist/types",

    "outDir": "dist/esm"
  },

  "include": ["./src/**/*.ts"],

  "exclude": ["node_modules"]
}
