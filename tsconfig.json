{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",

    "declaration": true,
    "declarationDir": "./types",

    "lib": [
      "dom",
      "es2016"
    ],

    "sourceMap": false,
    "removeComments": false,

    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "jsx": "react",
    "alwaysStrict": true,

    "outDir": "./dist/",
    "noEmitOnError": true
  },

  "include": [
    "./src/**/*"
  ],

  "exclude": [
    "node_modules",
    "tests",
    "karma.conf.ts"
  ]
}
